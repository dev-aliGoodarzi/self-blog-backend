            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string"
                },
                "schema": {
                  "$ref": "#/definitions/sendForgetPasswordRequestStep2Response"
                }
              }
            }
          }
        },
        "tags": ["Authentication"]
      }
    },
