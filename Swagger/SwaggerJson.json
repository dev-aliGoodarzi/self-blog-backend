{
  "swagger": "2.0",
  "info": {
    "title": "Self-Blog",
    "version": "1.0.0"
  },
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "// COMMENT_AUTH_START": {},
    "/admin/v1/auth-login": {
      "post": {
        "summary": "POST Admin Data (Email & Password) for Login",
        "operationId": "Login-Admin",
        "parameters": [
          {
            "in": "body",
            "name": "loginData",
            "required": true,
            "schema": {
              "$ref": "#/definitions/loginPostData"
            }
          },
          {
            "in": "header",
            "name": "language",
            "required": false,
            "schema": {
              "language": "fa | en"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User authenticated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "example": "22"
                }
              }
            }
          }
        },
        "tags": ["Authentication"]
      }
    },
    "/admin/v1/auth-register": {
      "post": {
        "summary": "POST Admin Data (Email & Password) for Register",
        "operationId": "Register-Admin",
        "parameters": [
          {
            "in": "body",
            "name": "loginData",
            "required": true,
            "schema": {
              "$ref": "#/definitions/loginPostData"
            }
          },
          {
            "in": "header",
            "name": "language",
            "required": false,
            "schema": {
              "language": "fa | en"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "string",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "example": "successful"
                }
              }
            }
          }
        },
        "tags": ["Authentication"]
      }
    },
    "/admin/v1/auth-resubmit-user-auth": {
      "post": {
        "summary": "Complete Admin Auth - Call It After Login When isRegistered is false",
        "operationId": "Complete-Register-Admin",
        "security": [
          {
            "SimpleAuth": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "loginData",
            "required": true,
            "schema": {
              "$ref": "#/definitions/completeAuthData"
            }
          },
          {
            "in": "header",
            "name": "language",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "string",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string",
                  "example": "successful"
                }
              }
            }
          }
        },
        "tags": ["Authentication"]
      }
    },
    "// COMMENT_AUTH_END": {},
    "// PROFILE_START": {},
    "/admin/v1/profile": {
      "get": {
        "summary": "Get Current User Profile - Based On Sending Token",
        "operationId": "Get_Admin_Profile",
        "security": [
          {
            "SimpleAuth": []
          }
        ],
        "parameters": [
          {
            "in": "header",
            "name": "language",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Get User Profile Data",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string"
                },
                "schema": {
                  "$ref": "#/definitions/AdminProfile"
                }
              }
            }
          }
        },
        "tags": ["Profile"]
      }
    },
    "/admin/v1/profile/avatar": {
      "get": {
        "summary": "Get Current User Profile Avatar - Based On Sending Token",
        "operationId": "Get_Admin_Profile",
        "security": [
          {
            "SimpleAuth": []
          }
        ],
        "parameters": [
          {
            "in": "header",
            "name": "language",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Get User Profile Data",
            "schema": {
              "type": "object",
              "properties": {
                "data": {
                  "type": "string"
                },
                "schema": {
                  "$ref": "#/definitions/AdminProfile"
                }
              }
            }
          }
        },
        "tags": ["Profile"]
      }
    },
    "// PROFILE_END": {}
  },
  "definitions": {
    "loginPostData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "email@email.com"
        },
        "password": {
          "type": "string",
          "example": "password with at least 8 char + symbol + number"
        }
      },
      "required": ["email", "password"]
    },
    "registerPostData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "email@email.com"
        },
        "password": {
          "type": "string",
          "example": "password with at least 8 char + symbol + number"
        }
      },
      "required": ["email", "password"]
    },
    "completeAuthData": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "email@email.com"
        },
        "lastName": {
          "type": "string",
          "example": "lastName"
        }
      },
      "required": ["name", "lastName"]
    },
    "AdminProfile": {
      "type": "object",
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "example"
            },
            "lastName": {
              "type": "string",
              "example": "example"
            },
            "email": {
              "type": "string",
              "example": "example"
            },
            "userId": {
              "type": "string",
              "example": "example"
            },
            "isRegisterCompleted": {
              "type": "boolean",
              "example": false
            },
            "blogs": { "type": "string" },
            "role": {
              "type": "string",
              "example": "ADMIN | USER"
            },
            "image": {
              "type": "string",
              "example": "Image File Name"
            }
          }
        },
        "message": {
          "type": "string",
          "example": "successful"
        }
      }
    }
  },
  "securityDefinitions": {
    "SimpleAuth": {
      "type": "apiKey",
      "name": "auth-token",
      "in": "header",
      "description": "Place Your Token here => WITHOUT Bearer"
    }
  }
}
